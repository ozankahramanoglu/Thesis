<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_profile_page"
        tools:context=".profilePage">

    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightBox"
            android:background="#00FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bdayBox"
            app:layout_constraintEnd_toEndOf="@+id/bdayBox"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alcoholBox"
            android:background="#00FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/weightBox"
            app:layout_constraintEnd_toEndOf="@+id/weightBox"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heightBox"
            android:background="#00920707"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/genderBox"
            app:layout_constraintEnd_toEndOf="@+id/genderBox"/>
    <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageViewPhoto" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genderBox"
            android:background="#00920707"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPhoto"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/nameBox"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tobaccoBox"
            android:background="#00920707"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/heightBox"
            app:layout_constraintEnd_toEndOf="@+id/heightBox"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameBox"
            android:background="#00FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPhoto" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bdayBox"
            android:background="#00FFFFFF" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPhoto"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/nameBox"/>
</android.support.constraint.ConstraintLayout>